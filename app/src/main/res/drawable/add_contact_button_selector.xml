<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#368ECF" />
                    <corners android:radius="3dip" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/add_contact_icon" />
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#2f7eb9" />
                    <corners android:radius="3dip" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/add_contact_icon" />
            </item>
        </layer-list>
    </item>
</selector>